<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_e"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:background="@color/color_4b3a75"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/layout_setting"
                    android:layout_width="match_parent"
                    android:layout_height="80px"
                    android:gravity="center|right">

                    <ImageView
                        android:id="@+id/iv_settting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_size_15"
                        android:src="@mipmap/icon_nav_set" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/layout_person_details"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.yyq58.activity.widget.CircleImageView
                        android:id="@+id/circleImageView"
                        android:layout_width="110px"
                        android:layout_height="110px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_size_15"
                        android:src="@mipmap/my_header" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/margin_size_15"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <com.zhy.autolayout.AutoLinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="陈老板"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_28" />
                            <ImageView
                                android:id="@+id/iv_sex"
                                android:layout_marginLeft="@dimen/margin_size_5"
                                android:src="@mipmap/icon_male"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </com.zhy.autolayout.AutoLinearLayout>


                        <TextView
                            android:textColor="@color/white"
                            android:id="@+id/tv_work_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_size_5"
                            android:text=""
                            android:textSize="@dimen/text_size_24"
                            android:visibility="visible" />
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|bottom">

                    <TextView
                        android:id="@+id/tv_refresh_vip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_size_15"
                        android:drawableLeft="@mipmap/icon_history_refresh"
                        android:drawablePadding="4dp"
                        android:text="会员刷新"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_22" />
                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_size_10"
                android:background="@color/white"
                android:orientation="horizontal">

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/layout_balance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_size_5"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥0"
                        android:textColor="@color/color_4b3a75"
                        android:textSize="@dimen/text_size_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="余额"
                        android:textColor="@color/text_color_9"
                        android:textSize="@dimen/text_size_24" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/layout_order"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_size_5"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_order_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/color_4b3a75"
                        android:textSize="@dimen/text_size_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单"
                        android:textColor="@color/text_color_9"
                        android:textSize="@dimen/text_size_24" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/margin_size_5"
                    android:layout_marginTop="@dimen/margin_size_5"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_usercenter_dangqi" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/layout_fensi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_size_5"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_fans_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/color_4b3a75"
                        android:textSize="@dimen/text_size_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="粉丝"
                        android:textColor="@color/text_color_9"
                        android:textSize="@dimen/text_size_24" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/layout_integral"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_size_5"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_jifen_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/color_4b3a75"
                        android:textSize="@dimen/text_size_24" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分"
                        android:textColor="@color/text_color_9"
                        android:textSize="@dimen/text_size_24" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/layout_vip_member"
                style="@style/PersonCenterLayoutStyle"
                android:layout_marginTop="5px"
                android:background="@color/white">

                <TextView
                    style="@style/PersonCenterTextLeftStyle"
                    android:drawableLeft="@mipmap/icon_usercenter_vip"
                    android:text="VIP 会员" />

                <TextView
                    android:id="@+id/tv_money"
                    style="@style/PersonCenterTextRightStyle"
                    android:drawableRight="@mipmap/icon_list_arrow_white" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/layotu_mine_order"
                style="@style/PersonCenterLayoutStyle"
                android:layout_marginTop="1px"
                android:background="@color/white">

                <TextView
                    style="@style/PersonCenterTextLeftStyle"
                    android:drawableLeft="@mipmap/icon_usercenter_order"
                    android:text="我的订单" />

                <TextView
                    android:id="@+id/tv_order_num2"
                    style="@style/PersonCenterTextRightStyle"
                    android:drawableRight="@mipmap/icon_list_arrow_white" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/layout_mine_finance"
                style="@style/PersonCenterLayoutStyle"
                android:layout_marginTop="1px"
                android:background="@color/white">

                <TextView
                    style="@style/PersonCenterTextLeftStyle"
                    android:drawableLeft="@mipmap/icon_usercenter_finance"
                    android:text="我的财务" />

                <TextView
                    android:id="@+id/tv_balance2"
                    style="@style/PersonCenterTextRightStyle"
                    android:drawableRight="@mipmap/icon_list_arrow_white" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/layout_fans"
                style="@style/PersonCenterLayoutStyle"
                android:layout_marginTop="5px"
                android:background="@color/white">

                <TextView
                    style="@style/PersonCenterTextLeftStyle"
                    android:drawableLeft="@mipmap/icon_usercenter_fans"
                    android:text="我的粉丝" />

                <TextView
                    android:id="@+id/tv_fans_num2"
                    style="@style/PersonCenterTextRightStyle"
                    android:drawableRight="@mipmap/icon_list_arrow_white" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/layout_attention"
                style="@style/PersonCenterLayoutStyle"
                android:layout_marginTop="1px"
                android:background="@color/white">

                <TextView
                    style="@style/PersonCenterTextLeftStyle"
                    android:drawableLeft="@mipmap/icon_usercenter_follow"
                    android:text="我关注的人" />

                <TextView
                    android:id="@+id/tv_guanzhu_num"
                    style="@style/PersonCenterTextRightStyle"
                    android:drawableRight="@mipmap/icon_list_arrow_white" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                style="@style/PersonCenterLayoutStyle"
                android:layout_marginTop="5px"
                android:background="@color/white">

                <TextView
                    style="@style/PersonCenterTextLeftStyle"
                    android:drawableLeft="@mipmap/icon_usercenter_follow"
                    android:text="艺人学院" />

                <TextView
                    style="@style/PersonCenterTextRightStyle"
                    android:drawableRight="@mipmap/icon_list_arrow_white" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                style="@style/PersonCenterLayoutStyle"
                android:layout_marginTop="1px"
                android:background="@color/white">

                <TextView
                    style="@style/PersonCenterTextLeftStyle"
                    android:drawableLeft="@mipmap/icon_usercenter_follow"
                    android:text="打赏提现" />

                <TextView
                    style="@style/PersonCenterTextRightStyle"
                    android:drawableRight="@mipmap/icon_list_arrow_white" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </android.support.v4.widget.NestedScrollView>
</com.zhy.autolayout.AutoLinearLayout>