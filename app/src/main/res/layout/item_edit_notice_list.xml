<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginBottom="@dimen/margin_size_5"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/margin_size_5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingBottom="@dimen/margin_size_5"
            android:paddingTop="@dimen/margin_size_5"
            android:gravity="center"
            android:background="@drawable/taiqian_btn_style"
            android:text="测试"
            android:layout_marginLeft="@dimen/margin_size_15"
            android:textSize="@dimen/text_size_26"
            android:textColor="@color/text_color_3"
            android:id="@+id/tv_label_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_person_num"
            android:gravity="center"
            android:text="1"
            android:textColorHint="@color/text_color_3"
            android:background="@drawable/search_btn_style"
            android:layout_marginLeft="@dimen/margin_size_15"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/text_size_26"
            android:textColor="@color/text_color_3"
            android:layout_marginLeft="@dimen/margin_size_15"
            android:text="人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_delete_notice"
            android:layout_marginRight="@dimen/margin_size_15"
            android:drawableRight="@mipmap/icon_clear"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>