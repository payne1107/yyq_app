<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_4b3a75"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_size_10"
            android:layout_marginLeft="@dimen/margin_size_10"
            android:layout_marginRight="@dimen/margin_size_10"
            android:layout_marginTop="@dimen/margin_size_10"
            android:background="@drawable/layout_motify_pwd_style"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_choose_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_size_10"
                android:layout_marginLeft="@dimen/margin_size_10"
                android:layout_marginTop="@dimen/margin_size_10"
                android:drawablePadding="4dp"
                android:drawableRight="@mipmap/icon_home_search_arrow"
                android:gravity="center_vertical"
                android:text="合肥市" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_10"
                android:layout_weight="1"
                android:background="@null"
                android:hint="找艺人，找通告"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/text_color_9"
                android:textColorHint="@color/text_color_9"
                android:textSize="@dimen/text_size_24" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_size_10"
                android:src="@mipmap/icon_home_searchbox_search" />
        </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginBottom="@dimen/margin_size_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_10"
            android:layout_marginRight="@dimen/margin_size_10"
            android:background="@mipmap/bg_home_infor"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="余额"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_24" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_24" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="档期"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_24" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粉丝"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_24" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_24" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <android.support.design.widget.TabLayout
        android:layout_below="@+id/layout_container"
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabIndicatorColor="@color/color_4b3a75"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/color_4b3a75"
        app:tabTextColor="@color/text_color_3"
        >
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:layout_below="@+id/tabLayout"
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </android.support.v4.view.ViewPager>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="@dimen/margin_size_10"
        android:background="@color/color_e"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tabLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/layout_yr"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_search_yr"
                android:layout_marginTop="@dimen/margin_size_5"
                android:layout_marginLeft="@dimen/margin_size_5"
                android:layout_marginRight="@dimen/margin_size_5"
                android:textSize="@dimen/text_size_22"
                android:text="查找\n艺人"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_size_10"
                android:layout_marginLeft="@dimen/margin_size_10"
                android:layout_marginTop="@dimen/margin_size_5"
                android:background="@color/text_color_6"
                android:layout_width="match_parent"
                android:layout_height="1px" />
            <TextView
                android:id="@+id/tv_yr_dynamic"
                android:layout_marginTop="@dimen/margin_size_5"
                android:layout_marginLeft="@dimen/margin_size_5"
                android:layout_marginRight="@dimen/margin_size_5"
                android:textSize="@dimen/text_size_22"
                android:text="艺人\n动态"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_size_10"
                android:layout_marginLeft="@dimen/margin_size_10"
                android:layout_marginTop="@dimen/margin_size_5"
                android:background="@color/text_color_6"
                android:layout_width="match_parent"
                android:layout_height="1px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_marginBottom="@dimen/margin_size_5"
            android:layout_marginTop="@dimen/margin_size_5"
            android:layout_marginLeft="@dimen/margin_size_5"
            android:layout_marginRight="@dimen/margin_size_5"
            android:src="@mipmap/icon_home_arrow_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_open"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/margin_size_5"
            android:layout_marginTop="@dimen/margin_size_5"
            android:layout_marginLeft="@dimen/margin_size_5"
            android:layout_marginRight="@dimen/margin_size_5"
            android:src="@mipmap/icon_home_arrow_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>